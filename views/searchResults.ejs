<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Search Results</title>
</head>
<body>
    <%- include('partials/navbar.ejs', { showSearch: true }) %>
    <div class="container mt-3">
        <h1>Search Results</h1>
        <% if (results.length > 0) { %>
            <% results.forEach(function(centre) { %>
                <div class="card mt-3" style="background-color: #e0efe4;">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="/images/<%= centre.image %>" class="img-fluid" alt="<%= centre.centrename %>">
                        </div>
                        <div class="col-sm-8">
                            <div class="container mt-3">
                                <div class="card-body">
                                    <h2><a href="/sports/<%= centre.centreId %>" class="text-danger"><%= centre.centrename %></a></h2>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <h4 class="card-text">Operating Hours</h4>
                                            <h5><%= centre.operatingHours %></h5>
                                        </div>
                                        <div class="col-sm-4">
                                            <h4 class="card-text">Phone Number</h4>
                                            <h5><%= centre.contactNumber %></h5>
                                        </div>
                                        <div class="col-sm-4">
                                            <h4 class="card-text">Address</h4>
                                            <h5><%= centre.address %></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No results found for "<%= query %>"</p>
        <% } %>
    </div>
</body>
</html>
